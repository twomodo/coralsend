NGINX_IMAGE=nginx:1.27.4

# ------------------------------------------------------------------------------
# Runtime environment (container runtime)
# ------------------------------------------------------------------------------

# Published HTTP port on host (optional; default: 80)
NGINX_HTTP_PORT=80
