# CoralSend Environment Variables
# Copy this file to .env and fill in your values

# Base Path for subdirectory deployment
# If deploying to root (/), leave empty or don't set
# If deploying to /coralsend, set to: /coralsend
# Must start with / if set
NEXT_PUBLIC_BASE_PATH=/coralsend

# Public site URL used for canonical URLs, sitemap, robots, and metadataBase
# Example: https://coralsend.example.com
NEXT_PUBLIC_SITE_URL=https://coralsend.example.com

# Public app version shown in UI/footer/changelog areas
# If not set, Next.js falls back to apps/web/package.json version
NEXT_PUBLIC_APP_VERSION=0.1.0

# WebSocket Signaling Server URL
# For production with subdirectory: wss://yourdomain.com/ws
# For local development: ws://localhost:8080/ws
# If not set, will be auto-detected from current URL
NEXT_PUBLIC_SIGNALING_URL=wss://example.com/ws

# STUN URL used by browsers for ICE gathering
# Example: stun:stun.example.com:3478
NEXT_PUBLIC_STUN_URL=stun:stun.example.com:3478

# TURN URL and credentials (self-hosted coturn)
# Example URL: turn:turn.example.com:3478?transport=udp
NEXT_PUBLIC_TURN_URL=turn:turn.example.com:3478?transport=udp
NEXT_PUBLIC_TURN_USER=coralsend
NEXT_PUBLIC_TURN_PASS=change-me

# Enable ICE diagnostics logs in browser console (true/false)
NEXT_PUBLIC_ICE_DIAGNOSTICS=false

# coturn runtime settings for deploy/docker-compose.prod.yml
# TURN_EXTERNAL_IP should be your server public IP in most VPS setups
TURN_REALM=coralsend.example.com
TURN_USER=coralsend
TURN_PASSWORD=change-me
TURN_EXTERNAL_IP=203.0.113.10

# Social links (optional; only set ones you use)
NEXT_PUBLIC_GITHUB_URL=https://github.com/twomodo/coralsend
# NEXT_PUBLIC_TWITTER_URL=
# NEXT_PUBLIC_TELEGRAM_URL=
# NEXT_PUBLIC_INSTAGRAM_URL=
# NEXT_PUBLIC_LINKEDIN_URL=

# Production images (used by deploy/docker-compose.prod.yml)
# Example:
# SERVER_IMAGE=ghcr.io/<github-owner>/coralsend-server:latest
# WEB_IMAGE=ghcr.io/<github-owner>/coralsend-web:latest
SERVER_IMAGE=ghcr.io/alifakhimi/coralsend-server:latest
WEB_IMAGE=ghcr.io/alifakhimi/coralsend-web:latest
